<?xml version="1.0" encoding="utf-8"?>
<!-- Refrence layout file for subclasses of QACardActivity.
  Copy this file to sub-class's own layout file  -->
<android.gesture.GestureOverlayView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:editingTool="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gesture_overlay"
	android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:uncertainGestureColor="#7FFF0000"
    android:eventsInterceptionEnabled="true"
    android:orientation="vertical" >
<LinearLayout
    android:id="@+id/root"
	android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="1">

    <TextView
        android:id="@+id/small_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14dp" />

    <FrameLayout
        android:id="@+id/card_root"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <EditText
        android:id="@+id/spell_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textSize="16pt" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/spellCheckSubmit" />

</LinearLayout>
</android.gesture.GestureOverlayView>
